{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Configure netdata",
    "$id": "http://nethserver.org/json-schema/task/input/netdata/configure-module",
    "description": "Configure netdata",
    "examples": [
        {
            "host": "netdata.domain.org",
            "http2https": true,
            "lets_encrypt": true
        }
    ],
    "type": "object",
    "required": [
        "host",
        "http2https"
    ],
    "properties": {
        "host": {
            "type": "string",
            "description": "Host name for the application, like 'netdata.domain.org'",
            "format": "hostname",
            "pattern": "\\."
        },
        "http2https": {
            "type": "boolean",
            "title": "HTTP to HTTPS redirection",
            "description": "Redirect all the HTTP requests to HTTPS"
        }
    }
}